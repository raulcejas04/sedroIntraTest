{% extends 'base.html.twig' %}

{% block title %}Realm index{% endblock %}

{% block body %}
    <h1>Realm index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Realm</th>
                <th>KeycloakRealmId</th>
                <th>FechaEliminacion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for realm in realms %}
            <tr>
                <td>{{ realm.id }}</td>
                <td>{{ realm.realm }}</td>
                <td>{% if realm.keycloakRealmId %}{{ realm.keycloakRealmId }}{% endif %}</td>
                <td>
                    <a href="{{ path('realm_show', {'id': realm.id}) }}">show</a>
                    <a href="{{ path('realm_edit', {'id': realm.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('realm_new') }}">Create new</a>
{% endblock %}
